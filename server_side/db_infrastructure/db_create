CREATE DATABASE currency_exchange_simulator COLLATE utf8_polish_ci

CREATE TABLE `currency_exchange_simulator`.`users`
(
    `login` VARCHAR(40) NOT NULL UNIQUE,
    `password` VARCHAR(60) NOT NULL ,
    `name` VARCHAR(40) NULL DEFAULT NULL ,
    `email` VARCHAR(120) NOT NULL UNIQUE ,
PRIMARY KEY (`login`)
) ENGINE = InnoDB CHARSET=utf8 COLLATE utf8_polish_ci;

CREATE TABLE `currency_exchange_simulator`.`tokens`
(
    `id_token` VARCHAR(128) NOT NULL ,
    `expiration` INT NOT NULL ,
    `user_login` VARCHAR(40) NOT NULL ,
PRIMARY KEY (`id_token`)
) ENGINE = InnoDB CHARSET=utf8 COLLATE utf8_polish_ci;

CREATE TABLE `currency_exchange_simulator`.`rates`
 (
    `date` DATE NOT NULL ,
    `base` VARCHAR(6) NOT NULL ,
    `AUD` FLOAT NULL DEFAULT NULL,
    `BGN` FLOAT NULL DEFAULT NULL,
    `BRL` FLOAT NULL DEFAULT NULL,
    `CAD` FLOAT NULL DEFAULT NULL,
    `CHF` FLOAT NULL DEFAULT NULL,
    `CNY` FLOAT NULL DEFAULT NULL,
    `CZK` FLOAT NULL DEFAULT NULL,
    `DKK` FLOAT NULL DEFAULT NULL,
    `GBP` FLOAT NULL DEFAULT NULL,
    `HKD` FLOAT NULL DEFAULT NULL,
    `HRK` FLOAT NULL DEFAULT NULL,
    `HUF` FLOAT NULL DEFAULT NULL,
    `IDR` FLOAT NULL DEFAULT NULL,
    `ILS` FLOAT NULL DEFAULT NULL,
    `INR` FLOAT NULL DEFAULT NULL,
    `JPY` FLOAT NULL DEFAULT NULL,
    `KRW` FLOAT NULL DEFAULT NULL,
    `MXN` FLOAT NULL DEFAULT NULL,
    `MYR` FLOAT NULL DEFAULT NULL,
    `NOK` FLOAT NULL DEFAULT NULL,
    `NZD` FLOAT NULL DEFAULT NULL,
    `PHP` FLOAT NULL DEFAULT NULL,
    `RON` FLOAT NULL DEFAULT NULL,
    `RUB` FLOAT NULL DEFAULT NULL,
    `SEK` FLOAT NULL DEFAULT NULL,
    `SGD` FLOAT NULL DEFAULT NULL,
    `THB` FLOAT NULL DEFAULT NULL,
    `TRY` FLOAT NULL DEFAULT NULL,
    `USD` FLOAT NULL DEFAULT NULL,
    `ZAR` FLOAT NULL DEFAULT NULL,
    `PLN` FLOAT NULL DEFAULT NULL,
    `EUR` FLOAT NULL DEFAULT NULL,
PRIMARY KEY (`date`)
) ENGINE = InnoDB CHARSET=utf8 COLLATE utf8_polish_ci;


CREATE TABLE `currency_exchange_simulator`.`investments`
 (
    `user_login` VARCHAR(40) NOT NULL ,
    `found_date` DATE NOT NULL ,
    `name` VARCHAR(200) NOT NULL ,
    `AUD` FLOAT NULL DEFAULT '0',
    `BGN` FLOAT NULL DEFAULT '0',
    `BRL` FLOAT NULL DEFAULT '0',
    `CAD` FLOAT NULL DEFAULT '0',
    `CHF` FLOAT NULL DEFAULT '0',
    `CNY` FLOAT NULL DEFAULT '0',
    `CZK` FLOAT NULL DEFAULT '0',
    `DKK` FLOAT NULL DEFAULT '0',
    `GBP` FLOAT NULL DEFAULT '0',
    `HKD` FLOAT NULL DEFAULT '0',
    `HRK` FLOAT NULL DEFAULT '0',
    `HUF` FLOAT NULL DEFAULT '0',
    `IDR` FLOAT NULL DEFAULT '0',
    `ILS` FLOAT NULL DEFAULT '0',
    `INR` FLOAT NULL DEFAULT '0',
    `JPY` FLOAT NULL DEFAULT '0',
    `KRW` FLOAT NULL DEFAULT '0',
    `MXN` FLOAT NULL DEFAULT '0',
    `MYR` FLOAT NULL DEFAULT '0',
    `NOK` FLOAT NULL DEFAULT '0',
    `NZD` FLOAT NULL DEFAULT '0',
    `PHP` FLOAT NULL DEFAULT '0',
    `RON` FLOAT NULL DEFAULT '0',
    `RUB` FLOAT NULL DEFAULT '0',
    `SEK` FLOAT NULL DEFAULT '0',
    `SGD` FLOAT NULL DEFAULT '0',
    `THB` FLOAT NULL DEFAULT '0',
    `TRY` FLOAT NULL DEFAULT '0',
    `USD` FLOAT NULL DEFAULT '0',
    `ZAR` FLOAT NULL DEFAULT '0',
    `PLN` FLOAT NULL DEFAULT '0',
    `EUR` FLOAT NULL DEFAULT '0',
PRIMARY KEY (`user_login`, `name`)
) ENGINE = InnoDB CHARSET=utf8 COLLATE utf8_polish_ci;


